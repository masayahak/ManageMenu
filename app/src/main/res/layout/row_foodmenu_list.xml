<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <!-- color_from_press_state:選択された時にグレーバック -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/color_from_press_state"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/foodimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/margin"
            android:contentDescription="@string/food_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/no_image"
            />

        <!-- 非表示のDBのID（内部処理＋デバッグ用） -->
        <TextView
            android:id="@+id/food_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            tools:text="1234" />

        <TextView
            android:id="@+id/food_name"
            style="@style/Widget.MyStyle.ListItemTextView"
            android:layout_width="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/margin"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/foodimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="唐揚げ定食" />

        <TextView
            android:id="@+id/food_price"
            style="@style/Widget.MyStyle.ListItemTextView"
            android:layout_width="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/margin"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toStartOf="@id/row_menu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="\1,980" />

        <TextView
            android:id="@+id/row_menu"
            style="@style/Widget.MyStyle.ListItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="@dimen/margin"
            android:fontFamily="sans-serif-black"
            android:gravity="start|center_vertical"
            android:text="︙"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="︙" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>